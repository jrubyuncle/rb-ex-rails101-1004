<div class="col-md-12">
  
  <h2 class="text-center"> My Posts </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Content </th>
        <th> Group Title </th>
        <th> Last Update </th>
        <th> Operation </th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(truncate(post.content, length: 20), group_post_path(post.group, post)) %> </td> 
          <td> <%= post.group.title %> </td>
          <td> <%= post.updated_at.to_s(:short) %> </td>
          <td>
            <%= link_to("Edit", edit_group_post_path(post.group, post),
                        class: "btn btn-info btn-xs") %>
            <%= link_to("Delete", group_post_path(post.group, post), method: :delete,
                        data: {confirm: "Are you sure?"},
                        class: "btn btn-danger btn-xs") %>
          </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
